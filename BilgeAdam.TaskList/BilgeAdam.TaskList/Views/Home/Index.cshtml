@{
    ViewData["Title"] = "Ana Sayfa";
}
<h2>Görev Listesi</h2>
<div class="row" id="taskList">
    <div class="col-md-4">
        <yms-todo></yms-todo>
    </div>
    <div class="col-md-4">
        <yms-inprogress></yms-inprogress>
    </div>
    <div class="col-md-4">
        <yms-done></yms-done>
    </div>
</div>

<script id="tmpTodo" type="text/html">
    <div>
        <h4>Yapılacak İşler</h4>
        <hr />
        <div class="input-group">
            <input type="text" class="form-control" v-model="title" placeholder="İşinize bir isim verin">
            <span class="input-group-btn">
                <button class="btn btn-primary" v-on:click="addNew" type="button">Ekle</button>
            </span>
        </div>
        <hr />
        <div class="list-group">
            <a class="list-group-item clearfix" v-for="(t, i) in tasks">
                {{t.title}}
                <span class="pull-right">
                    <span class="btn btn-xs btn-success">
                        <span class="glyphicon glyphicon-chevron-right" v-on:click="sendToInProgress(i, t)" aria-hidden="true"></span>
                    </span>
                    <span class="btn btn-xs btn-danger">
                        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                    </span>
                </span>
            </a>
        </div>
    </div>
</script>
<script id="tmpInprogress" type="text/html">
    <div>
        <h4>Üzerimdeki İşler</h4>
        <hr />
        <div class="list-group">
            <a class="list-group-item clearfix" v-for="(t, i) in tasks">
                {{t.title}}
                <span class="pull-right">
                    <span class="btn btn-xs btn-success">
                        <span class="glyphicon glyphicon-chevron-right" v-on:click="sendToInProgress(i, t)" aria-hidden="true"></span>
                    </span>
                    <span class="btn btn-xs btn-danger">
                        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                    </span>
                </span>
            </a>
        </div>
    </div>
</script>
<script id="tmpDone" type="text/html">
    <div>
        <h4>Biten İşler</h4>
        <ul class="list-group">
            <li class="list-group-item">Cras justo odio</li>
        </ul>
    </div>
</script>